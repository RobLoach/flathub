{
  "app-id": "org.lutris.Lutris",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.28",
  "sdk": "org.gnome.Sdk",
  "command": "lutris",
  "rename-desktop-file": "lutris.desktop",
  "rename-icon": "lutris",
  "finish-args": [
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--share=ipc",
    "--share=network",
    "--device=all",
    "--filesystem=host",
    "--allow=multiarch"
  ],
  "modules": [
    {
      "name": "cpython",
      "sources": [
        {
          "type": "archive",
          "url": "https://www.python.org/ftp/python/3.7.0/Python-3.7.0.tar.xz",
          "sha256": "0382996d1ee6aafe59763426cf0139ffebe36984474d0ec4126dd1c40a8b3549"
        }
      ]
    },
    "python3-PyYAML.json",
    "python3-PyGObject.json",
    "python3-evdev.json",
    {
      "name": "lutris",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/lutris/lutris.git",
          "branch": "v0.4.18",
          "commit": "8733bf46a7de9da0de6ad2234cfd21434c2020c5"
        }
      ],
      "buildsystem": "simple",
      "build-commands": [
				"pip3 install --prefix=/app ."
      ]
    }
  ]
}